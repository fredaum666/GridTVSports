<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />

    <children>
        <!-- Web View to display TV receiver -->
        <WebView
            id="tvReceiver"
            width="1920"
            height="1080"
            url="https://gridtvsports.com/tv-receiver.html"
        />

        <!-- Loading indicator while page loads -->
        <Poster
            id="loadingBg"
            width="1920"
            height="1080"
            uri="pkg:/images/splash_hd.png"
        />

        <Label
            id="loadingText"
            text="Loading GridTV Sports..."
            font="font:LargeBoldSystemFont"
            color="#FFFFFF"
            width="1920"
            height="100"
            horizAlign="center"
            vertAlign="center"
            translation="[0, 540]"
        />
    </children>
</component>
