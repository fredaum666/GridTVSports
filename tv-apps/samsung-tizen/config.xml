<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:tizen="http://tizen.org/ns/widgets"
    id="http://gridtvsports.com/tv"
    version="1.0.0"
    viewmodes="maximized">

    <tizen:application id="gridtvsports.tv" package="gridtvsports" required_version="2.3"/>
    <content src="index.html"/>

    <feature name="http://tizen.org/feature/screen.size.all"/>

    <icon src="icon.png"/>

    <name>GridTV Sports</name>
    <description>Live Sports Streaming for your TV</description>

    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/application.launch"/>

    <tizen:setting screen-orientation="landscape" context-menu="disable"
        background-support="enable" encryption="disable" install-location="auto"
        hwkey-event="enable"/>

    <access origin="*" subdomains="true"/>
</widget>
