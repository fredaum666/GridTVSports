<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0a0e1a"
                android:centerColor="#1a1f2e"
                android:endColor="#0a0e1a"
                android:angle="135" />
        </shape>
    </item>

    <!-- Purple accent bar at bottom -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="8dp" />
            <gradient
                android:startColor="#6366f1"
                android:endColor="#8b5cf6"
                android:angle="0" />
        </shape>
    </item>

    <!-- TV Icon -->
    <item
        android:gravity="center_vertical"
        android:left="30dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="45dp" />
            <solid android:color="#6366f1" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- App name text placeholder - will be rendered by system -->
</layer-list>
