<?xml version="1.0" encoding="utf-8"?>
<!-- TV Banner (320x180 dp) - Shown in Android TV launcher -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1a1a2e" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#20ff6b00"
                android:endColor="#00000000"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Text placeholder - In production, replace with actual banner image -->
    <item
        android:left="20dp"
        android:top="60dp"
        android:right="20dp"
        android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>
