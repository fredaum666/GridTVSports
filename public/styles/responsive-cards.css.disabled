}

@keyframes arrowSlideLeft {
  0% { transform: translateX(-150%); opacity: 0; }
  30% { opacity: 1; }
  100% { transform: translateX(0); opacity: 1; }
}

@keyframes arrowSlideRight {
  0% { transform: translateX(150%); opacity: 0; }
  30% { opacity: 1; }
  100% { transform: translateX(0); opacity: 1; }
}

