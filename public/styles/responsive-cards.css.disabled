@keyframes puntBallFly {
  0% { transform: translateX(0) translateY(0) rotate(0deg); left: 10%; bottom: 20%; opacity: 0; }
  5% { opacity: 1; }
  25% { transform: translateX(20%) translateY(-120%) rotate(180deg); opacity: 1; }
  50% { transform: translateX(40%) translateY(-180%) rotate(360deg); opacity: 1; }
  75% { transform: translateX(70%) translateY(-120%) rotate(540deg); opacity: 1; }
  95% { transform: translateX(85%) translateY(0) rotate(720deg); opacity: 1; }
  100% { transform: translateX(90%) translateY(10%) rotate(720deg); left: auto; right: 10%; opacity: 0.8; }
}

