/* ============================================
   12. TABLET MEDIA QUERIES (769px - 1024px)
   ============================================ */
@media (max-width: 1200px) {
  .fullscreen-grid.grid-6 {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(3, 1fr);
  }

  .fullscreen-grid.grid-8 {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(4, 1fr);
  }

  .fullscreen-grid.grid-6 .fullscreen-team-name {
    font-size: 2.5rem !important;
  }

  .fullscreen-grid.grid-6 .fullscreen-score {
    font-size: 4.5rem !important;
  }

  .fullscreen-grid.grid-4 .fullscreen-team-name {
    font-size: 2.5rem !important;
  }

  .fullscreen-grid.grid-4 .fullscreen-score {
    font-size: 4rem !important;
  }
}

@media screen and (min-width: 769px) and (max-width: 1024px) {
  .fullscreen-grid.grid-6 .fullscreen-possession,
  .fullscreen-grid.grid-8 .fullscreen-possession {
    font-size: 10px !important;
  }

  .fullscreen-grid.grid-4 .fullscreen-possession {
    font-size: 14px !important;
  }
}

/* ============================================
   13. MOBILE MEDIA QUERIES (‚â§768px)
   ============================================ */
@media (max-width: 768px) {
  /* Fullscreen grid layouts - ALL become single column vertical stack */
  .fullscreen-grid {
    grid-template-columns: 1fr !important;
    grid-template-rows: auto !important;
    gap: clamp(10px, 2vh, 20px) !important;
    padding: clamp(10px, 2vh, 20px) !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
    height: calc(100vh - 80px) !important;
  }

  /* ============================================
     1 GAME - MOBILE VERTICAL LAYOUT
     Teams stacked vertically for better readability
     Works for upcoming, live, and final games
     ============================================ */
  .fullscreen-grid.grid-1 {
    place-items: center !important;
    height: 100vh !important;
    height: 100dvh !important;
    padding: 10px !important;
    gap: 0 !important;
    overflow: hidden !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-game-card {
    max-width: 100% !important;
    width: 100% !important;
    height: calc(100vh - 20px) !important;
    height: calc(100dvh - 20px) !important;
    padding: 15px !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    align-items: center !important;
  }

  /* Force vertical layout for the score header on mobile grid-1 */
  .fullscreen-grid.grid-1 .fullscreen-live-score-header {
    flex-direction: column !important;
    gap: 10px !important;
    width: 100% !important;
    max-width: 100% !important;
  }

  /* Each team row - horizontal: logo, name/record, score */
  .fullscreen-grid.grid-1 .fullscreen-team-stack {
    flex-direction: row !important;
    justify-content: space-between !important;
    align-items: center !important;
    width: 100% !important;
    padding: 10px 5px !important;
    gap: 10px !important;
  }

  /* Team logo sizing */
  .fullscreen-grid.grid-1 .fullscreen-team-logo {
    width: 60px !important;
    height: 60px !important;
    flex-shrink: 0 !important;
  }

  /* Team name - full width, readable size */
  .fullscreen-grid.grid-1 .fullscreen-live-team-name {
    font-size: 1.8rem !important;
    flex: 1 !important;
    text-align: left !important;
    white-space: nowrap !important;
    overflow: visible !important;
  }

  /* Team record under name */
  .fullscreen-grid.grid-1 .fullscreen-team-record {
    font-size: 0.9rem !important;
    text-align: left !important;
  }

  /* Score on the right side */
  .fullscreen-grid.grid-1 .fullscreen-team-score {
    font-size: 3.5rem !important;
    min-width: 80px !important;
    text-align: right !important;
    flex-shrink: 0 !important;
  }

  /* Hide VS divider in vertical mobile layout */
  .fullscreen-grid.grid-1 .fullscreen-vs-divider-live {
    display: none !important;
  }

  /* Quarter/Clock styling */
  .fullscreen-grid.grid-1 .fullscreen-game-status {
    margin-bottom: 15px !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-quarter-text {
    font-size: 1.4rem !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-clock {
    font-size: 1.6rem !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-final-status {
    font-size: 1.6rem !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-upcoming-status {
    font-size: 1.4rem !important;
  }

  /* Down/Distance and Field Visualizer */
  .fullscreen-grid.grid-1 .fullscreen-down-distance-container {
    width: 100% !important;
    margin-top: 15px !important;
  }

  .fullscreen-grid.grid-1 .fullscreen-down-distance {
    font-size: 1.2rem !important;
  }

  .fullscreen-grid.grid-1 .field-visualizer {
    max-width: 100% !important;
    margin-top: 10px !important;
  }

  .fullscreen-grid.grid-1 .field-container {
    height: 35px !important;
  }

  /* Possession indicator */
  .fullscreen-grid.grid-1 .fullscreen-possession {
    font-size: 14px !important;
  }

  /* Timeout bars */
  .fullscreen-grid.grid-1 .fullscreen-timeouts {
    margin-top: 5px !important;
  }

  .fullscreen-grid.grid-1 .timeout-bar {
    width: 20px !important;
    height: 6px !important;
  }

  /* Sport logo in corner */
  .fullscreen-grid.grid-1 .sport-logo-indicator {
    width: 50px !important;
    height: 50px !important;
    top: 10px !important;
    left: 10px !important;
  }

  /* 2 GAMES - HALF SCREEN SIZES */
  .fullscreen-grid.grid-2 {
    grid-template-rows: repeat(2, 1fr) !important;
    height: 100vh !important;
    height: 100dvh !important;
    padding: 10px !important;
    gap: 10px !important;
    overflow: hidden !important;
  }

  .fullscreen-grid.grid-2 .fullscreen-game-card {
    height: calc((100vh - 30px) / 2) !important;
    height: calc((100dvh - 30px) / 2) !important;
  }

  .fullscreen-grid.grid-2 .fullscreen-team-logo {
    width: clamp(70px, 15vw, 100px) !important;
    height: clamp(70px, 15vw, 100px) !important;
  }

  .fullscreen-grid.grid-2 .fullscreen-team-name {
    font-size: clamp(2rem, 7vw, 3.5rem) !important;
  }

  .fullscreen-grid.grid-2 .fullscreen-score {
    font-size: clamp(3.5rem, 10vw, 5.5rem) !important;
  }

  /* Default mobile styling for 4+ games */
  .fullscreen-game-card {
    padding: 20px 20px 30px 20px !important;
    min-height: 300px !important;
  }

  .fullscreen-quarter {
    font-size: 1.4rem !important;
  }

  .fullscreen-team-logo {
    width: 50px !important;
    height: 50px !important;
  }

  .fullscreen-team-name {
    font-size: 1.8rem !important;
  }

  .fullscreen-score {
    font-size: 4.5rem !important;
  }

  .fullscreen-team-record {
    font-size: 0.9rem !important;
  }

  .fullscreen-down-distance {
    font-size: 1.4rem !important;
  }

  .fullscreen-possession {
    font-size: 14px !important;
  }

  .sport-logo-indicator {
    width: 45px !important;
    height: 45px !important;
  }

  .timeout-bar {
    width: 22px !important;
    height: 6px !important;
  }
}

/* ============================================
   14. DESKTOP LARGE SCREEN (‚â•1025px)
   ============================================ */
@media screen and (min-width: 1025px) {
  /* Desktop keeps the original grid layouts */
  .fullscreen-grid.grid-2 {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr;
  }

  .fullscreen-grid.grid-4 {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
  }

  .fullscreen-grid.grid-6 {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
  }

  .fullscreen-grid.grid-8 {
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
  }
}

